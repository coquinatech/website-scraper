{
  "name": "server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:loki-transport": "mkdir -p dist/utils && esbuild src/utils/loki-transport.ts --bundle --platform=node --format=esm --outfile=dist/utils/loki-transport.js --external:pino-abstract-transport",
    "dev": "npm run build:loki-transport && tsx watch src/server.ts",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "test": "vitest --reporter=dot",
    "test:ui": "vitest --ui --reporter=dot",
    "test:coverage": "vitest --coverage --reporter=dot",
    "test:watch": "vitest --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts"
  },
  "keywords": [
    "template",
    "devops",
    "observability",
    "typescript",
    "fastify"
  ],
  "author": "",
  "license": "MIT",
  "description": "A production-ready development template with comprehensive DevOps tooling",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.2.1",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/instrumentation": "^0.203.0",
    "@opentelemetry/instrumentation-fastify": "^0.48.0",
    "@opentelemetry/instrumentation-http": "^0.203.0",
    "@opentelemetry/instrumentation-pg": "^0.55.0",
    "@opentelemetry/instrumentation-pino": "^0.50.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@sinclair/typebox": "^0.34.38",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.5.1",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.8.0",
    "pino-loki": "^2.6.0",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.3",
    "uuid": "^11.1.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  }
}
