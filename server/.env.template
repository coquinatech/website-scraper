# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=postgres

# Database URL (alternative to individual DB_ variables)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/postgres

# DBOS Configuration
# DBOS uses the same database as the application by default
# Override if you want DBOS to use a different database
# DBOS_SYSTEM_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres

# DBOS OpenTelemetry Configuration (optional)
# Export traces to an OTLP-compatible receiver like Jaeger
# OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
# OTLP_LOGS_ENDPOINT=http://localhost:4318/v1/logs
# DBOS_LOG_LEVEL=info

# LLM Provider Configuration
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default LLM Provider (openai, anthropic, or mock)
DEFAULT_LLM_PROVIDER=mock