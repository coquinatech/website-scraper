{
  "name": "Kadre Devcontainer Template",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "privileged": true,
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/terraform:1.4.0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker",
        "hashicorp.terraform",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-playwright.playwright",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "remote.autoForwardPorts": false,
        "go.toolsManagement.autoUpdate": true,
        "go.toolsManagement.checkForUpdates": "local",
        "go.gopath": "/go",
        "go.goroot": "/usr/local/go",
        "go.alternateTools": {},
        "go.languageServerExperimentalFeatures": {
          "diagnosticsDelay": "250ms",
          "documentLink": true
        },
        "go.lintOnSave": "package",
        "go.vetOnSave": "package",
        "go.formatTool": "goimports",
        "go.useCodeSnippetsOnFunctionSuggest": true,
        "go.inferGopath": true,
        "go.gocodeAutoBuild": true,
        "go.installDependenciesWhenBuilding": true,
        "go.enableCodeLens": {
          "runtest": true
        },
        "go.testFlags": ["-v"],
        "go.testTimeout": "30s",
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.eol": "\n",
        "files.exclude": {
          "**/node_modules": true,
          "**/tmp": true,
          "**/bin": true,
          "**/*.log": true,
          "**/.git": true
        },
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "go.lintTool": "golangci-lint",
        "go.lintFlags": ["--fast"]
      }
    }
  },
  "postCreateCommand": ".devcontainer/setup-shell.sh",
  "postStartCommand": ".devcontainer/init-grafana-dashboards.sh",
  "remoteUser": "vscode",
  "forwardPorts": ["frontend:5173", "server:5000", "grafana:3000"]
}